<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %> <% if (messages && messages.notice) { %>
<p class="flash-message"><%= messages.notice %></p>
<% } %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<p class="form-label"><i>All fields are required</i></p>
<form
  class="account-form registration-form"
  action="/account/register"
  method="post"
>
  <label for="first_name">First Name:</label>
  <input
    type="text"
    id="first_name"
    name="account_firstname"
    placeholder=" "
    required
    value="<%= locals.account_firstname %>"
  />

  <label for="last_name">Last Name:</label>
  <input
    type="text"
    id="last_name"
    name="account_lastname"
    placeholder=" "
    required
    value="<%= locals.account_lastname %>"
  />

  <label for="email">Email:</label>
  <input
    type="email"
    id="email"
    name="account_email"
    placeholder="example@email.com"
    required
    value="<%= locals.account_email %>"
  />

  <label for="password">Password:</label>
  <input
    type="password"
    id="password"
    name="account_password"
    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
    title="Must contain at least one number, one uppercase letter, one lowercase letter, one special character, and be at least 12 characters long."
    placeholder=" "
    required
  />
  <p>
    Password should be at least 12 characters in length, and contain at least 1
    capital letter, 1 number, and 1 special character
  </p>

  <input type="submit" value="Register" />
</form>
